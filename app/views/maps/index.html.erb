<p id="notice"><%= notice %></p>

<h1>Maps</h1>

<table id="map" class="table table-hover">
  <thead>
    <tr class="table-active">
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td><%= map.name %></td>
        <td><%= map.latitude %></td>
        <td><%= map.longitude %></td>
        <td><%= map.user %></td>
        <td><%= link_to 'Show', map, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_map_path(map), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>
